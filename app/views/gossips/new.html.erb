<% if @gossip %>
	<div class="alert alert-danger" role="alert">
		<%if @gossip.errors.any? %>
			<p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
			<ul>
				<% @gossip.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
	</div>
<% end %>
<div class="container">
	<h1>Crée un potin !</h1>
	<p>Balance ton potin via le formulaire ci-dessous</p>

	<%= form_tag url_for(action: 'create'), method: "post" do %>


	<div class="form-group">
		<%= label_tag 'Title' %>
		<%= text_field_tag 'title', 'Titre du Gossip', class: 'form-control' %>
		<br /> <br />
	</div>

	<div class="form-group">
		<%= label_tag 'Body' %>
		<%= text_area_tag 'content', 'content', class: 'form-control' %>
		<br /> <br />
	</div>

	<div class="form-group">
		<%= label_tag 'Author' %>
		<%= email_field_tag 'email', 'anonymous@anonymous.com', class: 'form-control' %>
		<br /> <br />
	</div>

	<%= submit_tag "Create Post" %>

<% end %>
	
</div>
